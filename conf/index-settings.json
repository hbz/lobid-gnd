{
	"settings": {
		"index": {
			"max_result_window": "25000",
			"analysis": {
				"analyzer": {
					"default": {
						"type" : "custom",
						"tokenizer" : "standard",
						"filter": ["lowercase", "german_normalization"]
					},
					"autocomplete": {
						"tokenizer": "edge_ngram_tokenizer",
						"filter": ["lowercase", "german_normalization"]
					},
					"id": {
						"tokenizer": "keyword",
						"filter": "lowercase"
					},
					"ascii": {
						"tokenizer": "standard",
						"filter": ["lowercase", "asciifolding"]
					}
				}, 
				"tokenizer": {
					"edge_ngram_tokenizer": {
						"type": "edge_ngram",
						"min_gram": "2",
						"max_gram": "40",
						"token_chars": [
							"letter",
							"digit"
						]
					}
				}
			}
		}
	}, 
	"mappings": {
		"authority": {
			"date_detection" : false,
			"dynamic_templates": [
				{
					"id_subfields": {
						"path_match": "*.id",
						"mapping": {
							"type": "keyword",
							"index": true
						}
					}
				}
			],
			"properties": {
				"@context": {
					"type": "keyword",
					"include_in_all": false,
					"index": false
				},
				"id": {
					"type": "keyword",
					"index": true
				},
				"gndIdentifier": {
					"type": "keyword",
					"index": true
				},
				"dateOfBirth": {
					"type": "keyword",
					"index": true
				},
				"dateOfDeath": {
					"type": "keyword",
					"index": true
				},
				"dateOfConferenceOrEvent": {
					"type": "keyword",
					"index": true
				},
				"dateOfDiscovery": {
					"type": "keyword",
					"index": true
				},
				"dateOfEstablishment": {
					"type": "keyword",
					"index": true
				},
				"dateOfProduction": {
					"type": "keyword",
					"index": true
				},
				"dateOfPublication": {
					"type": "keyword",
					"index": true
				},
				"dateOfTermination": {
					"type": "keyword",
					"index": true
				},
				"describedBy": {
					"properties" : {
						"dateModified": {
							"type": "date",
							"include_in_all": false
						}
					}
				},
				"type" : {
					"type": "keyword",
					"index": true
				},
				"preferredName": {
					"type": "text",
					"fields": {
						"ngrams": {
							"type": "text",
							"analyzer": "autocomplete",
							"search_analyzer": "default"
						},
						"keyword": {
							"type": "keyword"
						},
						"ascii": {
							"type": "text",
							"analyzer": "ascii"
						}
					}
				}, 
				"variantName": {
					"type": "text",
					"fields": {
						"ngrams": {
							"type": "text",
							"analyzer": "autocomplete",
							"search_analyzer": "default"
						},
						"keyword": {
							"type": "keyword"
						},
						"ascii": {
							"type": "text",
							"analyzer": "ascii"
						}
					}
				},
				"professionOrOccupation": {
					"properties" : {
						"label": {
							"type": "keyword"
						}
					}
				}
			}
		}
	}
}
